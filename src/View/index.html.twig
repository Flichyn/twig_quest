{% extends 'base.html.twig' %}

{% block title %}
    Products | Twig Quest
{% endblock %}

{% block content %}

<div class="container-fluid">
    <div class="row">

        {% for product in products %}
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ product }}</h5>
                        <p class="card-text">Lorem ipsum dolor</p>
                    </div>
                </div>
            </div>
        {% endfor %}
{% endblock %}
